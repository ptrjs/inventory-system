<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Order</h1>
    <div class="btn-toolbar mb-2 mb-md 0">
      <div class="btn-group me-2">
        <button class="btn btn-sm btn-outline-secondary">?</button>
      </div>
    </div>
  </div>

  
  <div class="col py-3">
    <div class="row">
      <div class="col">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/order">Order</a></li>
            <li class="breadcrumb-item active">New Order</li>
          </ol>
        </nav>
      </div>
      <div class="col text-end fw-lighter">
        <b>UserId</b>
      </div>
    </div>
  
  </div>
  
  
  <form action="/order/add" method="POST">
  
    <div class="row form-group mb-4">
        <div class="col">
            <label for="orderTotalPrice">Total Price</label>
            <input type="number" step="any" class="form-control" id="orderTotalPrice" name="totalPrice" value="" placeholder="Price" required>
        </div>
     </div>
    

    <div class="row form-group mb-4">
        <div class="col">
            <label for="orderDate">Date</label>
            <input type="date" class="form-control" id="orderDate" name="date" value=""  required>
        </div>
    
       
      </div>
   
      <div class="row form-group mb-4">
        <div class="col">
            <label for="orderCustomerName">Customer Name</label>
            <input type="text" class="form-control" id="orderCustomerName" name="customerName" value="" placeholder="John" required>
        </div>
        <div class="col">
            <label for="orderCustomerEmail">Customer Email</label>
            <input type="text" class="form-control" id="orderCustomerEmail" name="customerEmail" value="" placeholder="john.doe@mail.com" required>
        </div>
      </div>

    <div class="row form-group mb-4">
      <div class="col">
          <label for="orderUser">User</label>
          <select class="form-control" id="orderUser" name="userId" required>
              <option value="" disabled selected>Select User</option>
              <% user.forEach(element =>{ %>
              <option value="<%= element.id %>"><%= element.name %></option>
              <% }) %>
              
          </select>
      </div>
   </div>


     <div class="form-group mb-4">
      <button type="submit" class="btn btn-primary">Add Order</button>
    </div>
  
  </form>
