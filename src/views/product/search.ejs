<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Search</h1>
    <div class="btn-toolbar mb-2 mb-md 0">
    </div>
  </div>
  
<div class="table-responsive">
    <% if (product.length > 0) { %>

      <table class="table table-striped table-sm">
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Category</th>
            <th scope="col">Price</th>
            <th scope="col">Quantity</th>
            <th scope="col">Description</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% product.forEach(element => { %>
            <tr class="align-middle">
              <td><%= element.name %></td>
              <td><%= element.category.name %></td>
              <td><%= element.price %></td>
              <td><%= element.quantityInStock %></td>
              <td><%= element.description %></td>
              <td>
  
                <div class="d-flex flex-row justify-content-end gap-2">
  
                  <a href="/product/detail/<%= element.id %>" type="button" class="btn btn-primary btn-small">
                    <i class="bi bi-eye"></i>
                  </a>
    
                  <a href="/product/edit/<%= element.id %>" type="button" class="btn btn-warning btn-small">
                    <i class="bi bi-pencil"></i>
                  </a>
    
                 
                    <button type="button" class="btn btn-danger btn-small" data-bs-toggle="modal" 
                    id="deleteButton" data-bs-target="#deleteModal<%= element.id %>">
                        <i class="bi bi-trash"></i>
                    </button>
               
    
                </div>
  
              </td>
            </tr>
            <div class="modal fade" id="deleteModal<%= element.id %>"  tabindex="-1" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <div class="modal-title">You are about to remove a product record.</div>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" arial-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <p>
                                This will remove the product record of <b class="fw-bold"><%= element.name %></b><br/>
                                Are you sure?
                            </p>
                        </div>
            
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            
                            <form action="/product/edit/<%= element.id %>?_method=DELETE" method="POST" class="position-relative">
                                <button type="submit" class="btn btn-primary">Yes, remove product</button>
                            </form>
                        </div>
            
                    </div>
                </div>
              </div>  
          <% }) %>
        </tbody>
      </table>
  
    <% } else { %>
      <h2>No results found.</h2>
    <% } %>
  
  </div>